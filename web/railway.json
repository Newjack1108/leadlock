{
  "$schema": "https://railway.app/railway.schema.json",
  "$comment": "This is the Next.js frontend configuration. Root directory must be set to 'web' in Railway.",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "./nixpacks.toml"
  },
  "deploy": {
    "startCommand": "export PATH=/app/node_modules/.bin:/root/.nix-profile/bin:/nix/var/nix/profiles/default/bin:$PATH && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
