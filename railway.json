{
  "$schema": "https://railway.app/railway.schema.json",
  "$comment": "Backend API configuration. Root directory should NOT be set (use repo root).",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "api/nixpacks.toml"
  },
  "deploy": {
    "startCommand": "sh api/start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
